{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "This is the location in which all the linked templates are stored."
            }
        },
        "dcIpAddress": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "virtualMachineName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "diagnosticsStorageAccountName": {
            "type": "string"
        },
        "diagnosticsStorageAccountId": {
            "type": "string"
        },
        "addressPrefix": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "subnetPrefix": {
            "type": "string"
        },
        "publicIpAddressType": {
            "type": "string"
        },
        "publicIpAddressSku": {
            "type": "string"
        },
        "imageSku": {
            "type": "string",
            "allowedValues": [
                "2016-Datacenter",
                "2012-R2-Datacenter",
                "2008-R2-SP1"
            ],
            "defaultValue": "2012-R2-Datacenter"
        }
    },
    "variables": {
        "dcTemplateUri": "[concat(parameters('_artifactsLocation'), 'ARMTemplates/base_vm.json')]",
        "dscExtensionArchiveFolder": "DSC",
        "dscExtensionArchiveFileName": "LabDSC.ps1.zip",
        "dscExtensionScript": "LabDSC.ps1",
        "dscExtensionFunction": "Forest",
        "dnsServerIpAddresses": "[parameters('dcIpAddress')]"
    },
    "resources": [{
            "name": "DC",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('dcTemplateUri')]"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "diagnosticsStorageAccountName": {
                        "value": "[parameters('diagnosticsStorageAccountName')]"
                    },
                    "diagnosticsStorageAccountId": {
                        "value": "[parameters('diagnosticsStorageAccountId')]"
                    },
                    "addressPrefix": {
                        "value": "[parameters('addressPrefix')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "subnetPrefix": {
                        "value": "[parameters('subnetPrefix')]"
                    },
                    "publicIpAddressType": {
                        "value": "[parameters('publicIpAddressType')]"
                    },
                    "publicIpAddressSku": {
                        "value": "[parameters('publicIpAddressSku')]"
                    },
                    "imageSku": {
                        "value": "[parameters('imageSku')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('virtualMachineName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "Microsoft.Resources/Deployments/DC"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.21",
                "autoUpgradeMinorVersion": true,
                "forceUpdateTag": "1.02",
                "settings": {
                    "configuration": {
                        "url": "[concat(parameters('_artifactsLocation'), variables('dscExtensionArchiveFolder'), '/', variables('dscExtensionArchiveFileName'))]",
                        "script": "[variables('dscExtensionScript')]",
                        "function": "[variables('dscExtensionFunction')]"
                    },
                    "configurationArguments": {}
                },
                "protectedSettings": {
                    "configurationArguments": {
                        "safemodeAdministratorCred": {
                            "UserName": "[parameters('adminUsername')]",
                            "Password": "[parameters('adminPassword')]"
                        },
                        "domainCred": {
                            "UserName": "[parameters('adminUsername')]",
                            "Password": "[parameters('adminPassword')]"
                        },
                        "NewADUserCred": {
                            "UserName": "[parameters('adminUsername')]",
                            "Password": "[parameters('adminPassword')]"
                        }
                    }
                }
            }
        },
        {
            "name": "virtualNetworkDNSUpdate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "Microsoft.Resources/Deployments/DC",
                "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'),'/extensions/Microsoft.Powershell.DSC')]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {},
                "template": {
                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [{
                        "name": "[parameters('virtualNetworkName')]",
                        "type": "Microsoft.Network/virtualNetworks",
                        "location": "[resourcegroup().location]",
                        "apiVersion": "2017-08-01",
                        "properties": {
                            "dhcpOptions": {
                                "dnsServers": ["[variables('dnsServerIpAddresses')]"]
                            },
                            "addressSpace": {
                                "addressPrefixes": [
                                    "[parameters('addressPrefix')]"
                                ]
                            },
                            "subnets": [{
                                "name": "[parameters('subnetName')]",
                                "properties": {
                                    "addressPrefix": "[parameters('subnetPrefix')]"
                                }
                            }]
                        }
                    }]
                }
            }
        }
    ],
    "outputs": {

    }
}